<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5E6D3"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Header Row with Image and Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Product Image -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/angkorricelogo"
                android:contentDescription="Product Image"
                android:scaleType="centerInside"
                android:layout_marginEnd="12dp" />

            <!-- Product Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/txt_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#C9A961"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:spacing="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_edit"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:text="Edit"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:background="@drawable/quantity_button_background"
                android:layout_marginEnd="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:text="Delete"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:background="@drawable/quantity_button_background" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
