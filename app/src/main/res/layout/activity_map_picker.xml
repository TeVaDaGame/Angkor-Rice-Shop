<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        android:background="#C9A961"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnBackToCheckout"
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:text="Back"
            android:textSize="14sp"
            android:textColor="#000000"
            android:background="@drawable/quantity_button_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pick Location on Map"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <View
            android:layout_width="80dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Info Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5E6D3"
        android:padding="12dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Location"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etSearchAddress"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Enter address or location"
                android:textSize="12sp"
                android:textColor="#333333"
                android:textColorHint="#AAAAAA"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:inputType="text"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSearchLocation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸ”"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/quantity_button_background"
                android:gravity="center" />

        </LinearLayout>

        <Button
            android:id="@+id/btnConfirmLocation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirm Location"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/quantity_button_background"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

