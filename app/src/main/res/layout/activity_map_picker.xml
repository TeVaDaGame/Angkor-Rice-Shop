<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        android:background="#C9A961"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnBackToCheckout"
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:text="Back"
            android:textSize="14sp"
            android:textColor="#000000"
            android:background="@drawable/quantity_button_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pick Location on Map"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <View
            android:layout_width="80dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <!-- Google Map Fragment -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <fragment
            android:id="@+id/mapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- My Location Button -->
        <Button
            android:id="@+id/btnMyLocation"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="ðŸ“"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/quantity_button_background"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:elevation="4dp" />

    </FrameLayout>

    <!-- Bottom Info Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5E6D3"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etSearchAddress"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:hint="Search address or location"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/search_bar_background"
                android:inputType="text"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:cursorVisible="false" />

            <Button
                android:id="@+id/btnSearchLocation"
                android:layout_width="56dp"
                android:layout_height="45dp"
                android:text="Search"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/quantity_button_background"
                android:gravity="center"
                android:padding="4dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnConfirmLocation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirm Location"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/quantity_button_background"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

